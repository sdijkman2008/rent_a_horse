<!-- CvT: this form has to be refactored to be a partial -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Edit <%= @horse.name %></h1> << <%= link_to "Back to Horses", horses_path %>
      <p></p>
      <%= simple_form_for @horse do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :level %>
      <%= f.input :breed %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
